<section id="CreateHotel">
    <h1>{{ t 'page.admin.hotel.title' }}</h1>

    <ul class="nav nav-tabs">
        <li role="presentation">
            {{#link-to "admin.hotel" }}
                {{ t 'application.navigation.admin.hotel.view' }}
            {{/link-to}}
        </li>

        <li role="presentation" class="active">
            {{#if model.isEditing}}
                <a>{{ t 'application.navigation.admin.hotel.update' }}</a>
            {{else}}
                <a>{{ t 'application.navigation.admin.hotel.create' }}</a>
            {{/if}}
        </li>
    </ul>

    <p class="description well well-sm">
        {{#if model.isEditing}}
            {{ t 'page.admin.hotel.create-hotel.update-description' }}
        {{else}}
            {{ t 'page.admin.hotel.create-hotel.description' }}
        {{/if}}
    </p>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group has-feedback {{if model.isNameLongEnough 'has-success'}}">
                <label>{{t 'page.admin.hotel.create-hotel.form-name-label'}}</label>
                {{input type="text" value=model.name class="form-control" placeholder=(t 'page.admin.hotel.create-hotel.form-name-placeholder') autofocus="autofocus" disabled=model.isEditing}}
                {{#if model.isNameLongEnough}}
                    <span class="glyphicon glyphicon-ok form-control-feedback"></span>
                {{/if}}
            </div>

            <div class="form-group has-feedback {{if model.isAddressLongEnough 'has-success'}}">
                <label>{{t 'page.admin.hotel.create-hotel.form-address-label'}}</label>
                {{input type="text" value=model.address class="form-control" placeholder=(t 'page.admin.hotel.create-hotel.form-address-placeholder') autofocus="autofocus"}}
                {{#if model.isAddressLongEnough}}
                    <span class="glyphicon glyphicon-ok form-control-feedback"></span>
                {{/if}}
            </div>

            <div class="form-group has-feedback {{if model.isNumberOfRoomsValid 'has-success'}}">
                <label>{{t 'page.admin.hotel.create-hotel.form-number-of-rooms-label'}}</label>
                {{input type="number" value=model.numberOfRooms class="form-control" placeholder=(t 'page.admin.hotel.create-hotel.form-number-of-rooms-placeholder') autofocus="autofocus"}}
                {{#if model.isNumberOfRoomsValid}}
                    <span class="glyphicon glyphicon-ok form-control-feedback"></span>
                {{/if}}
            </div>

            <div class="form-group has-feedback {{if model.isRateValid 'has-success'}}">
                <label>{{t 'page.admin.hotel.create-hotel.form-rate-label'}}</label>
                {{input type="number" value=model.rate class="form-control" placeholder=(t 'page.admin.hotel.create-hotel.form-rate-placeholder') autofocus="autofocus"}}
                {{#if model.isRateValid}}
                    <span class="glyphicon glyphicon-ok form-control-feedback"></span>
                {{/if}}
            </div>
        </div>

        <div class="col-md-12">
            {{#if model.isEditing}}
                <button type="button" class="btn {{if model.isModelValid 'btn-success'}}"
                        title="{{ t 'page.admin.hotel.create-hotel.button-text-update' }}"
                    {{ action "update" }}
                        disabled={{model.isModelNotValid}}>
                    {{ t 'page.admin.hotel.create-hotel.button-text-update' }}
                </button>
            {{else}}
                <button type="button" class="btn {{if model.isModelValid 'btn-success'}}"
                        title="{{ t 'page.admin.hotel.create-hotel.button-text-create' }}"
                    {{ action "create" }}
                        disabled={{model.isModelNotValid}}>
                    {{ t 'page.admin.hotel.create-hotel.button-text-create' }}
                </button>
            {{/if}}
        </div>
    </div>

    {{partial "partials/feedback-response-message"}}
    {{partial "partials/feedback-error-message"}}
</section>