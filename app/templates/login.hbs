<section id="Login">
	<h1>{{t 'page.login.title'}}</h1>

	<div class="row">
		<div class="col-md-12">
			{{#unless model.responseMessage}}
				<div class="form-group has-feedback {{if model.isUsernameLongEnough 'has-success'}}">
					<label>{{t 'page.login.form-username-label'}}</label>
					{{input type="text" value=model.username class="form-control" placeholder=(t 'page.login.form-username-placeholder') autofocus="autofocus"}}
					{{#if model.isUsernameLongEnough}}
						<span class="glyphicon glyphicon-ok form-control-feedback"></span>
					{{/if}}
				</div>

				<div class="form-group has-feedback {{if model.isPasswordLongEnough 'has-success'}}">
					<label>{{t 'page.login.form-password-label'}}</label>
					{{input type="text" value=model.password class="form-control" type="password" placeholder=(t 'page.login.form-password-placeholder')}}
					{{#if model.isPasswordLongEnough}}
						<span class="glyphicon glyphicon-ok form-control-feedback"></span>
					{{/if}}
				</div>

                <button type="button" class="btn {{if model.isModelValid 'btn-success'}}"
                        title="{{ t 'page.login.form-login-button' }}"
                    {{action 'authenticate' model}}
                        disabled={{model.isModelNotValid}} >
                    {{t 'page.login.form-login-button'}}
                </button>
			{{/unless}}

			{{partial "partials/feedback-response-message"}}
			{{partial "partials/feedback-error-message"}}
		</div>
	</div>
</section>