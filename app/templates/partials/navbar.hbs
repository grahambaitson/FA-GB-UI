<section id="Navbar">
	<nav class="navbar navbar-inverse">
		<div class="container-fluid">
	    	<div class="navbar-header">
	      		<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-navbar">
	        		<span class="sr-only">Toggle navigation</span>
	        		<span class="icon-bar"></span>
	        		<span class="icon-bar"></span>
	        		<span class="icon-bar"></span>
	      		</button>
	      		{{#link-to 'index' class="navbar-brand"}}
					<img src="/assets/images/logo_trans.png" alt={{t 'application.logo.alt'}}>
				{{/link-to}}
	    	</div>

	   	 	<div class="collapse navbar-collapse" id="main-navbar">
	      		<ul class="nav navbar-nav">
      				{{#if session.isAuthenticated}}
                        {{#nav-link-to 'admin.guest'}}
                            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                            {{t 'application.navigation.admin.guest.guest'}}
                        {{/nav-link-to}}
                        {{#nav-link-to 'admin.hotel'}}
                            <span class="glyphicon glyphicon-header" aria-hidden="true"></span>
                            {{t 'application.navigation.admin.hotel.hotel'}}
                        {{/nav-link-to}}
                        {{#nav-link-to 'admin.booking'}}
                            <span class="glyphicon glyphicon-bed" aria-hidden="true"></span>
                            {{t 'application.navigation.admin.booking.booking'}}
                        {{/nav-link-to}}
          			{{/if}}
	      		</ul>

	      		<ul class="nav navbar-nav navbar-right">
                    {{#nav-link-to 'about'}}
                        <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                        {{t 'application.navigation.about'}}
                    {{/nav-link-to}}
	      			{{#if session.isAuthenticated}}
              			 <li>
              			 	<a href="#" {{action 'logout' on="click"}}>
              			 		<span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
              					{{t 'application.navigation.user.logout'}}
							 </a>
						 </li>
          			{{else}}
          				{{#nav-link-to 'login'}}
              				<span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
              				{{t 'application.navigation.user.login'}}
          				{{/nav-link-to}}
          			{{/if}}
	      		</ul>
	    	</div>
	  	</div>
	</nav>
</section>